@using GhiasAmooz.Core.Convertors;
@using GhiasAmooz.Core.DTOs;


@model GhiasAmooz.Core.DTOs.ChargeWalletViewModel
@{
    ViewData["Title"] = "کیف پول شما ";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">قیاسآموز </a></li>
            <li class="breadcrumb-item active" aria-current="page"> کیف پول شما </li>
        </ul>
    </nav>
</div>


<main>
    <div class="container">
        <div class="user-account">
            <div class="row">

                <partial name="_SideBar" /> 
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> شارژ کیف پول   </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="Index" method="post" enctype="multipart/form-data">
                              
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-balance-wallet"></i></span>
                                            <input asp-for="Amout" type="number" class="form-control" placeholder="مبلغ به تومان" aria-describedby="username">
                                        </div>
                                    </div>      
                                    <div class="text-danger" asp-validation-summary="All"></div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> شارژ کیف پول  </button>
                                    </div>
                                </div>
                            </form>
                            <hr/>
                            @{
                                List<WalletViewModel> list = ViewBag.ListWallet as List<WalletViewModel>;
                            }
                            <table class="table table-bordered">
                                <tr>
                                    <th>مبلغ</th>
                                    <th>تاریخ</th>
                                    <th>نوع تراکنش</th>
                                    <th>شرح</th>
                                </tr>
                                @foreach(var item in list)
                                {
                                    <tr>
                                        <td >@item.Amount.ToString("#,0تومان")</td>
                                        <td>@item.DateTime.ToShamsi()</td>
                                        <td>
                                            @if(item.Type == 1)
                                            {
                                                <p class="text-success">واریز به حساب</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">برداشت از حساب</p>
                                            }
                                        </td>
                                        <td>@item.Description</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>