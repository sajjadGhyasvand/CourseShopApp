@page "{id}"
@model GhiasAmooz.Web.Pages.Admin.Roles.EditRoleModel
@{
    ViewData["Title"] = "ویرایش نقش";
    //List<Role> Roles = ViewData["Roles"] as List<Role>;
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> ویرایش نقش</h1>
    </div>
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ویرایش نقش @Model.Role.RoleTitle
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <input type="hidden" asp-for="Role.RoleId" class="form-control">
                    <input type="hidden" asp-for="Role.IsDelete" class="form-control">
                    <div class="form-group">
                        <label>عنوان نقش</label>
                        <input type="text" asp-for="Role.RoleTitle" class="form-control">
                    </div>

                    <input type="submit" value="قتب نقش" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    دسترسی‌های نقش
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                </div>
                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>