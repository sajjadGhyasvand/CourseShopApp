@page
@model GhiasAmooz.Web.Pages.Admin.Course.IndexModel
@{
    ViewData["Title"] = "لیست دوره‌ها";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره‌ها</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">
                    <a asp-page="CreateCourse" class="btn btn-outline btn-success">افزودن دوره جدید</a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان دوره</th>
                            <th>تعداد جلسات</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.ListCourse)
                        {
                            <tr>
                                <td>
                                    <img src="/Course/image/@course.ImageName" class="thumbnail" style="max-width:120px" />
                                </td>
                                <td>@course.CourseTitle</td>
                                <td>@course.EpisodeCount</td>
                                <td>
                                    @*<a href="/Admin/Users/EditUser/@user.UserId" class="btn btn-warning btn-sm">
                                        ویرایش
                                    </a>
                                    <a href="/Admin/Users/DeleteList/@user.UserId" class="btn btn-danger btn-sm">
                                        حذف
                                    </a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
         
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>